<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:RockRebel.Models"
             xmlns:viewmodel="clr-namespace:RockRebel.ViewModels"
             x:DataType="viewmodel:SongViewModel"
             x:Name="Page"
             x:Class="RockRebel.Views.HomePage">

    <ContentPage.Content>
        <RefreshView IsRefreshing="{Binding Busy}" Command="{Binding RefreshDataCommand}">
            <Grid ColumnDefinitions="*,*"
          RowDefinitions="auto,*"
          Padding="10">

                <CollectionView ItemsSource="{Binding Songs}"
                        Grid.ColumnSpan="2"
                        Grid.Row="1">

                    <CollectionView.ItemTemplate>

                        <DataTemplate x:DataType="model:Song">

                            <Grid ColumnDefinitions="*,*"
                          RowDefinitions="*,*,*,*, auto">

                                <Label Text="{Binding Title}"
                               FontSize="15"
                               Grid.Column="0"
                               Grid.Row="0"
                               Grid.ColumnSpan="4"/>

                                <Label Text="{Binding Artist}"
                               FontSize="12"
                               Grid.Column="0"
                               Grid.Row="1"/>

                                <Label Text="{Binding Genre}"
                               FontSize="12"
                               Grid.Column="0"
                               Grid.Row="3"/>

                                <Label Text="{Binding Year}"
                               FontSize="12"
                               Grid.Column="0"
                               Grid.Row="2"/>

                                <Label Text="{Binding Likes}"
                               Grid.Column="2"
                               Grid.Row="1"
                               HorizontalOptions="End"/>

                                <BoxView HeightRequest="1"
                                 BackgroundColor="Gray"
                                 HorizontalOptions="FillAndExpand"
                                 Grid.ColumnSpan="3"
                                 Grid.Row="4"
                                 Margin="0,0,0,10"/>

                            </Grid>

                        </DataTemplate>

                    </CollectionView.ItemTemplate>

                </CollectionView>

                <VerticalStackLayout Grid.Row="0"
                             Margin="0,0,0,50">

                    <Label Text="Most popular song: "/>
                    <Label Text="{Binding PopSong}"/>

                </VerticalStackLayout>

            </Grid>
        </RefreshView>
    </ContentPage.Content>

    
</ContentPage>